<!DOCTYPE html>
<html lang="en">
  <%- include('head.ejs', {title: "Register"}) -%>
  <body>
    <div class="container">
      <h1 class="text-center">Register Here</h1>
      <hr />
      <%- include('message') -%>

      <div class="container row">
        <div class="col-2"></div>
        <div class="col-8">
          <form action="" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input id="name" class="form-control" type="text" name="name" />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                id="email"
                class="form-control"
                type="email"
                name="email"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                id="password"
                class="form-control"
                type="password"
                name="password"
              />
            </div>
            <div class="form-group">
              <input type="submit" value="Register" class="btn btn-primary" />
            </div>
          </form>
          <p class="mt-5">
            Already have a Account, <a href="/user/login">Login Here</a>
          </p>
        </div>
        <div class="col-2"></div>
      </div>
    </div>
    <%- include('jquery') -%>
  </body>
</html>
