<!DOCTYPE html>
<html lang="en">
  <%- include('head.ejs', {title: "Login"}) -%>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <h2 class="text-center">Login Here</h2>
      <hr />

      <div class="row justify-content-center">
        <div class="col-10">
          <form action="" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                id="email"
                class="form-control"
                type="email"
                name="email"
                required
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                id="password"
                class="form-control"
                type="password"
                name="password"
                required
              />
            </div>
            <div class="form-group text-center">
              <input type="submit" value="Login" class="btn btn-primary" />
            </div>
          </form>
          <p class="mt-5">
            Not have a Account, <a href="/user/register">Register Here</a>
          </p>
        </div>
      </div>
    </div>
    <%- include('jquery') -%>
  </body>
</html>
