<!DOCTYPE html>
<html lang="en">
  <%- include('head.ejs', {title: "Home"}) -%>
  <body>
    <div class="container">
      <h1>Todo App</h1>
      <p>
        <a href="/user/logout">Logout</a>
      </p>
      <hr />
      <%- include('message') -%>

      <!-- todo adding form -->
      <div class="container pt-3">
        <form action="/todo/addtodo" method="POST" class="form-inline">
          <div class="form-group">
            <label for="newtodo">New Todo :</label>
            <input
              type="text"
              name="todo"
              id="newtodo"
              class="form-control ml-2"
            />
            <input type="submit" value="Add" class="btn btn-primary ml-2" />
          </div>
        </form>
      </div>

      <!-- all todo list -->
      <div class="container mt-5">
        <% if(todos.length > 0){ %>
        <div>
          <% for(let todo of todos){ %>
          <div class="row shadow-lg p-3 mb-3 bg-white rounded">
            <div class="col-6">
              <p>
                <%- todo.message %>
              </p>
            </div>
            <div class="col-6">
              <a href="/todo/delete/<%- todo._id %>" class="btn btn-danger"
                >Delete</a
              >
              <a href="/todo/update/<%- todo._id %>" class="btn btn-success"
                >Update</a
              >
            </div>
          </div>
          <% } %>
        </div>
        <% }else{ %>
          <p class="text-center">No TODO</p>
        <% } %>
      </div>
    </div>
    <%- include('jquery') -%>
  </body>
</html>
